<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical"
    tools:context=".ui.fragments.ThirdFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FFC5C5"
        app:cardCornerRadius="150dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/usuarioImg"
            android:layout_width="160dp"
            android:layout_height="154dp"
            android:background="@color/principal"
            android:scaleType="centerCrop"
            android:src="@drawable/round_person_24"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnCambiarFoto"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:layout_marginTop="156dp"
        android:backgroundTint="@color/principal"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/card" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/round_add_photo_alternate_24"
        app:layout_constraintBottom_toBottomOf="@+id/btnCambiarFoto"
        app:layout_constraintEnd_toEndOf="@+id/btnCambiarFoto"
        app:layout_constraintStart_toStartOf="@+id/btnCambiarFoto"
        app:layout_constraintTop_toTopOf="@+id/btnCambiarFoto"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/usuarioEmail"
        android:layout_width="350dp"
        android:layout_height="31dp"
        android:layout_marginTop="44dp"
        android:layout_weight="1"
        android:background="@color/principal"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCambiarFoto"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/etiquetaEmail"
        android:layout_width="348dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:text="Tu correo electrónico:"
        android:textColor="@color/black"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCambiarFoto"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/etiquetaEmail2"
        android:layout_width="348dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="TUS PELÍCULAS FAVORITAS:"
        android:textColor="@color/white"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/usuarioEmail"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoriteRecyclerView"

        android:layout_width="382dp"
        android:layout_height="294dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/etiquetaEmail2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>