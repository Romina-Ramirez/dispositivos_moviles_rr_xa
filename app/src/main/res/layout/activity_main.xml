    <TextView
        android:id="@+id/btn_olvido"
        style="@style/etiquetas"
        android:layout_width="95dp"
        android:layout_height="24dp"
        android:layout_marginTop="12dp"
        android:text="Recuperala"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingresoContrasena" />

    <TextView
        android:id="@+id/conectese"
        style="@style/hola"
        android:layout_width="@dimen/tamanio"
        android:layout_height="21dp"
        android:layout_marginTop="56dp"
        android:text="O inicia sesión usando tu huella dactilar"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingresar" />

    <Button
        android:id="@+id/btn_huella"
        style="@style/boton"
        android:layout_width="314dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/rojo"
        android:text="Ingresar con mi huella"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conectese" />

    <TextView
        android:id="@+id/no_cuenta"
        style="@style/hola"
        android:layout_width="215dp"
        android:layout_height="25dp"
        android:layout_marginTop="36dp"
        android:text="¿Aún no tienes una cuenta?"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_huella" />

    <TextView
        android:id="@+id/registro"
        style="@style/etiquetas"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_marginTop="36dp"
        android:text="Regístrese"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_huella" />

    <ImageView
        android:id="@+id/imgOcul"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/visibility"
        app:layout_constraintEnd_toEndOf="@+id/ingresoContrasena"
        app:layout_constraintHorizontal_bias="0.968"
        app:layout_constraintStart_toStartOf="@+id/ingresoContrasena"
        app:layout_constraintTop_toTopOf="@+id/ingresoContrasena" />

