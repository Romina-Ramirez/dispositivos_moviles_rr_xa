<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AplicacionMovil" parent="Theme.Material3.DayNight.NoActionBar">
         <item name="colorPrimary">@color/orange</item>
    </style>

    <style name="Theme.AplicacionMovil" parent="Base.Theme.AplicacionMovil" />

    <style name="titles">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="welcome">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="etiquetas">
        <item name="android:textColor">@color/darkPurple</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="etiquetas2">
        <item name="android:textColor">@color/darkPink</item>
        <item name="android:fontFamily">@font/quicksand_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ingresos">
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="boton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/asap_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/gold</item>
    </style>

    <style name="boton2" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/asap_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:backgroundTint">@color/orange</item>
    </style>

    <style name="activeIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/orange</item>
    </style>

</resources>